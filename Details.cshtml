@model Dish

<h1>@Model.Name</h1>
<div>
   <a asp-controller = "Home" asp-action="Index">Home</a>
     <a asp-controller="Home"  asp-action="NewDish" method="GET">Add a Dish</a>
</div>
<h3>@Model.Name by @Model.Chef</h3>
<h3>@Model.Description</h3>
<h3>Calories: @Model.Calories</h3>
<h3>Tastiness: @Model.Tastiness</h3>


<form
    asp-controller="Home"
    asp-action="DeleteDish"
    asp-route-dishId="@Model.DishId"
    method="POST"
>
<button>Delete</button>
</form>
  <a asp-controller="Home" asp-action="EditDish" asp-route-dishId = "@Model.DishId">Edit </a>